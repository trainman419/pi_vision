<launch>
  <node name="arbotix" pkg="arbotix_python" type="driver.py" output="screen">
    <rosparam file="$(find pi_arbotix)/params/head_only.yaml" command="load" />
  </node>
  
  <node name="head_traj_controller" pkg="arbotix_controllers" type="traj_controller.py">
	 <rosparam param="joints">[head_pan_joint, head_tilt_joint]</rosparam>
  </node>
  
  <node pkg="diagnostic_aggregator" type="aggregator_node" name="diagnostic_aggregator" >
    <rosparam command="load" file="$(find pi_arbotix)/params/diagnostics.yaml" />
  </node>

  <node pkg="robot_monitor" type="robot_monitor" name="robot_monitor" />

</launch>
