<launch>
  <arg name="debug" value="False" />
  <arg name="launch_prefix" value="xterm -e gdb --args" />
    
  <include file="$(find pi_kinect)/launch/kinect_frames.launch" />

  <group if="$(arg debug)">
    <node launch-prefix="$(arg launch_prefix)" name="skeleton_tracker" pkg="demo_tracker" type="skeleton_tracker" output="screen">
      <param name="load_filepath" value="$(find demo_tracker)/params/SamplesConfig.xml" />
      <param name="fixed_frame" value="openni_depth_frame" />
    </node>
  </group>
  <group unless="$(arg debug)">
    <node name="skeleton_tracker" pkg="demo_tracker" type="skeleton_tracker" output="screen" >
      <param name="load_filepath" value="$(find demo_tracker)/params/SamplesConfig.xml" />
      <rosparam command="load" file="$(find demo_tracker)/params/tracker_params.yaml" />
    </node>
  </group>

  <node pkg="tf" type="static_transform_publisher" name="base_world_broadcaster" args="0 0 0 0 0 0 /base_link /world 100" />
</launch>