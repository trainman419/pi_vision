<launch>
  <!-- Set the same namespace as used with the ax12 controllers -->
  <arg name="ax12_namespace" value="ax12_controller" />

  <!-- Start the point_head node -->
  <node ns="$(arg ax12_namespace)" name="point_head_node" pkg="pi_demo" type="point_head.py" output="screen" />
  
  <!-- Start the GUI -->
  <node ns="$(arg ax12_namespace)" name="head_pointer_gui" pkg="pi_demo" type="head_pointer_gui.py" output="screen" />
</launch>
