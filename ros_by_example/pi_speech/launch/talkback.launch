<launch>

  <node name="recognizer" pkg="pocketsphinx" type="recognizer.py">
    <param name="lm" value="$(find pi_speech)/params/test_speech.lm"/>
    <param name="dict" value="$(find pi_speech)/params/test_speech.dic"/>
  </node>

  <node name="soundplay_node" pkg="sound_play" type="soundplay_node.py" output="screen"/>
  <node name="talkback" pkg="pi_speech" type="talkback.py" output="screen"/>

</launch>
