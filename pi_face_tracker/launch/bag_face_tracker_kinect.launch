<launch>
  <node pkg="image_transport" name="republish_rgb_compressed" type="republish" args="compressed" output="screen">
    <remap from="in" to="/camera/rgb/image_color"/>
    <remap from="out" to="/image_color"/>
  </node>
  
  <node pkg="image_transport" name="republish_depth_compressed" type="republish" args="compressed" output="screen">
    <remap from="in" to="/camera/depth/image"/>
    <remap from="out" to="/image_depth"/>
  </node>
 
  <node pkg="pi_face_tracker" name="face_tracker_kinect" type="face_tracker.py" output="screen">
    <rosparam>
      input_image: /image_color
      depth_image: /image_depth
      flip_image: False
      do_face_tracking: True
      detect_face_only: False
      use_depth_for_detection: False
      use_depth_for_tracking: False
      min_features: 50
      auto_min_features: False
      abs_min_features: 6
      std_err_xy: 2.5
      show_text: True
      show_features: True
    </rosparam>
    
  	<param name="cascade_frontal_alt" value="$(find pi_face_tracker)/params/haarcascade_frontalface_alt.xml" />
   	<param name="cascade_frontal_alt2" value="$(find pi_face_tracker)/params/haarcascade_frontalface_alt2.xml" />
  	<param name="cascade_profile" value="$(find pi_face_tracker)/params/haarcascade_profileface.xml" />
  </node>
</launch>
